@model IEnumerable<Mango.Web.Models.ProductDTO>

<br/><br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-dark">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="createProduct" class="btn btn-outline-dark">Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@((item.Price).ToString("C"))</td>
                    <td>
                        <a asp-action="EditProduct" class="btn btn-success" asp-route-productId="@item.ProductId">Edit</a>
                        <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-productId="@item.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 